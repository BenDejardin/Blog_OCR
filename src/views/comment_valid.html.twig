{% extends 'base.html.twig' %}

{% block content %}

  <div class="container">
    <h1 class="my-4">Liste des commentaires Ã  valider</h1>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
            <th>Pseudo</th>
            <th>Commentaire</th>
            <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for comment in comments %}
          <tr>
            <td>{{ comment.author }}</td>
            <td>{{ comment.content|raw|nl2br }}</td>
            <td>
            <div class="d-flex align-items-center">
              <a href="valid-comment?{{comment.id}}" class="btn btn-success btn-sm me-2"><i class="fas fa-check"></i></a>
              <a href="reject-comment?{{comment.id}}" class="btn btn-danger btn-sm"><i class="fas fa-times"></i></a>
            </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <a href="home" class="btn btn-primary"><i class="fas fa-home"></i> Retour sur l'accueil</a>
  </div>
{% endblock %}