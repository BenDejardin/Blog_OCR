{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            {% for article in articles %}
                <div class="col-md-6">
                    <div class="card mb-4">
                        <img class="card-img-top" style="object-fit: cover;height: 200px;" src="https://picsum.photos/200" alt="img">
                        <div class="card-body">
                            <h5 class="card-title">{{article.title}}</h5>
                            <p class="card-text">{{article.subtitle}}</p>
                            <a href="./article?{{article.id}}" class="btn btn-primary">Lire l'article</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
