{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <img class="card-img-top" style="object-fit: cover;height: 200px;" src="https://picsum.photos/200" alt="img">
                    <div class="card-body">
                        <h5 class="card-title">{{article.title}}</h5>
                        <p class="card-text">{{article.content}}</p>
                        <p class="card-text">{{article.author}} / {{article.updated_at}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
