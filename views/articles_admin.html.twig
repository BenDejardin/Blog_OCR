{% extends 'base.html.twig' %}

{% block content %}
  <div class="container">
    <h1 class="my-4">Liste des articles</h1>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Subtitle</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {% for article in articles %}
          <tr>
            <td>{{ article.title }}</td>
            <td>{{ article.subtitle }}</td>
            <td>
              <div class="d-flex align-items-center">
                <a href="edit-article?{{article.id}}" class="btn btn-primary btn-sm me-2"><i class="fas fa-edit"></i></a>
                <a href="delete-article?{{article.id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this article?')"><i class="fas fa-trash-alt"></i></a>
              </div>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <a href="add-article" class="btn btn-success"><i class="fas fa-plus"></i> Add Article</a>
  </div>
{% endblock %}
